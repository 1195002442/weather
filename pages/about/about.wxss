.container {
  display: flex;
  color: #666;
  font-size: 30rpx;
  flex-direction: column;
  justify-content: space-between;
  min-height: 100vh;
}

.container .content {
  background: #f4f6f9;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.item {
  line-height: 2.2em;
  padding: 0 40rpx;
  overflow: hidden;
  background: #fff;
  margin-bottom: 20rpx;
}

.item .title {
  font-size: 32rpx;
  color: #40a7e7;
  margin: 26rpx 0;
}

.item .i {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
  padding-bottom: 16rpx;
}

.i .icon {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 2.2em;
}

.i image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.feedback .text {
  position: relative;
  z-index: 1;
}
.feedback .btn {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  top: 0;
  left: 1;
  opacity: 0;
}