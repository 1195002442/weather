page {
  -webkit-font-smoothing: antialiased;
  font-family: "PingHei","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif";
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  color: #fff;
  font-size: 30rpx;
}

.bcg {
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.search {
  position: fixed;
  z-index: 4;
  top: 0;
  left: 0;
  range: 0;
  width: 100%;
  height: 90rpx;
}

.wrapper {
  flex-direction: row;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  margin: 15rpx 50rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  border: none;
  border-bottom: 1rpx solid #fff;
}

.search image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}
.search input {
  flex: 1;
}
.placeholderClass {
  color: #fff;
}

.avatarInfo {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
}

.avatarInfo .avatar {
  display: block;
  overflow: hidden;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.avatarInfo .name {
  padding: 0 20rpx;
  font-size: 30rpx;
}

.avatarInfo .downArrow {
  width: 30rpx;
  height: 30rpx;
}

.container .content {
  flex: 1;
  transition: .3s ease;
}

.content {
  position: relative;
  z-index: 2;
  margin-top: -60rpx;
}

.city {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 0 50rpx;
  font-size: 66rpx;
}

.city .name {
  width: 5em;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.city .time {
  display: block;
  text-align: right;
  font-size:  24rpx;
}

.message {
  font-size: 22rpx;
  color: #fff;
  padding: 30rpx 50rpx 0;
  box-sizing: border-box;
}

.info {
  padding-bottom: 50rpx;
}
.info .temp,
.info .pm,
.info .pm view,
.info .weather {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.temp {
  height: 300rpx;
  font-size: 200rpx;
}
.num {
  font-weight: 300;
}
.info .weather {
  margin-bottom: 30rpx;
}
.info .pm text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, .2);
}
.guide {
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  display: flex;
  font-size: 24rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: rgba(0, 0, 0, .6);
  margin-bottom: 20rpx;
}

.guide .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.guide .i {
  padding-bottom: 20rpx;
}

.livingIndex {
  background: rgba(0, 0, 0, .6);
  margin-bottom: 20rpx;
}

.livingIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}

.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}

.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60rpx;
  font-size: 22rpx;
  color: #fff;
}

.chooseBcg {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  font-size: 24rpx;
  color: #333;
}

.chooseBcg .top {
  box-sizing: border-box;
  padding: 20rpx 20rpx 50rpx;
  background: rgba(255, 255, 255, 0);
  color: #fff;
}

.chooseBcg .bcgs {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  overflow: scroll;
}

.chooseBcg .border {
  padding: 6rpx;
  margin-right: 14rpx;
  border: 1rpx solid rgba(255, 255, 255, 0);
  transition: .1s ease;
}
.chooseBcg .border:last-child {
  margin-right: 0;
}
.chooseBcg .border.active {
  border: 1rpx solid #40a7e7;
  transition: .1s ease;
}
.chooseBcg .bcgs image {
  width: 110rpx;
  height: 190rpx;
}
.chooseBcg .close {
  flex: 1;
  background: rgba(0, 0, 0, 0);
  padding: 20rpx 0;
  text-align: center;
}
.chooseBcg .close image {
  width: 64rpx;
  height: 64rpx;
}

.menus .menu {
  height: 40px;
  width: 40px;
  position: fixed;
  z-index: 100;
  bottom: 150rpx;
  right: 70rpx;
  opacity: 0;
}

.menus .main {
  opacity: 1;
}